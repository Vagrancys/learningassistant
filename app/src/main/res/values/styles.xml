<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--公有答题的style-->
    <style name="start_radio_style">
        <item name="android:gravity">center</item>
        <item name="android:text">@string/start_radio_item_title</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:layout_marginEnd">@dimen/margin_width_30dp</item>
        <item name="android:layout_marginStart">@dimen/margin_width_30dp</item>
        <item name="android:layout_marginTop">@dimen/margin_width_5dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_width_5dp</item>
        <item name="android:paddingLeft">@dimen/margin_width_20dp</item>
        <item name="android:paddingRight">@dimen/margin_width_20dp</item>
        <item name="android:paddingTop">@dimen/margin_width_10dp</item>
        <item name="android:paddingBottom">@dimen/margin_width_10dp</item>
        <item name="android:background">@drawable/topic_select_no_bg</item>
    </style>

    <style name="ladder_radio_style">
        <item name="android:gravity">center</item>
        <item name="android:text">@string/start_radio_item_title</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:layout_marginEnd">@dimen/margin_width_30dp</item>
        <item name="android:layout_marginStart">@dimen/margin_width_30dp</item>
        <item name="android:layout_marginTop">@dimen/margin_width_5dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_width_5dp</item>
        <item name="android:paddingLeft">@dimen/margin_width_20dp</item>
        <item name="android:paddingRight">@dimen/margin_width_20dp</item>
        <item name="android:paddingTop">@dimen/margin_width_10dp</item>
        <item name="android:paddingBottom">@dimen/margin_width_10dp</item>
        <item name="android:background">@drawable/topic_select_no_bg</item>
    </style>

    <style name="start_radio_submit_style">
        <item name="android:gravity">center</item>
        <item name="android:text">@string/start_radio_submit_title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:paddingStart">@dimen/margin_width_50dp</item>
        <item name="android:paddingEnd">@dimen/margin_width_50dp</item>
        <item name="android:paddingTop">@dimen/margin_width_10dp</item>
        <item name="android:paddingBottom">@dimen/margin_width_10dp</item>
        <item name="android:background">@drawable/topic_radio_submit_bg</item>
    </style>

    <style name="start_common_hint_style">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/margin_width_10dp</item>
    </style>

    <style name="ladder_common_hint_style">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/margin_width_10dp</item>
    </style>

    <!--天梯的各个功能项的公有style-->
    <style name="ladder_function_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:padding">@dimen/margin_width_10dp</item>
    </style>

    <!--天梯成绩的公有style-->
    <style name="result_item_style">
        <item name="android:layout_width">@dimen/margin_width_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--个人中心知识数据-->
    <style name="mine_data_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--个人中心知识线性布局-->
    <style name="mine_data_linear_style">
        <item name="android:layout_width">@dimen/margin_width_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
   </style>

    <!--基础样式配置-->
    <style name="base_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>

    <!--基础edit添加样式-->
    <style name="base_edit_insert_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minLines">3</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:background">@drawable/common_edit_shape</item>
    </style>

    <!--展示知识样式-->
    <style name="text_show_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
        <item name="android:minLines">3</item>
    </style>

    <!--添加知识view-->
    <style name="view_common_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin_width_1dp</item>
        <item name="background">@color/black_1</item>
        <item name="android:layout_marginTop">@dimen/margin_width_5dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_width_5dp</item>
    </style>

    <style name="dialog_animation_style">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>
</resources>
