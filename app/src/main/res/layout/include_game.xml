<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetStart="@dimen/margin_width_0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/margin_width_10dp"
            android:paddingEnd="@dimen/margin_width_10dp">
            <ImageView
                android:id="@+id/game_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/game_select_normal"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/game_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_text"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_24sp"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/game_hall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/overview_hall_normal"
                android:layout_toStartOf="@+id/game_sign"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_width_10dp"/>
            <ImageView
                android:id="@+id/game_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/game_sign_normal"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>