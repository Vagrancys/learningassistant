<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_width_10dp"
        android:background="@drawable/home_content_item_shape"
        android:padding="@dimen/margin_width_10dp">
        <ImageView
            android:id="@+id/content_item_have"
            android:layout_width="@dimen/margin_width_40dp"
            android:layout_height="@dimen/margin_width_30dp"
            android:src="@drawable/know_have_normal"/>
        <TextView
            android:id="@+id/content_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_item_title"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_24sp"
            android:ellipsize="end"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:id="@+id/content_item_linear_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content_item_title"
            android:layout_marginBottom="@dimen/margin_width_10dp"
            android:gravity="center|start">
            <ImageView
                android:id="@+id/content_item_level"
                android:layout_width="@dimen/margin_width_60dp"
                android:layout_height="@dimen/margin_width_50dp"
                android:layout_marginTop="@dimen/margin_width_5dp"
                android:src="@drawable/know_level_1"
                android:scaleType="fitXY"
                android:layout_marginEnd="@dimen/margin_width_10dp"/>
            <TextView
                android:id="@+id/content_item_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="@string/content_item_summary"
                android:textSize="@dimen/text_size_24sp"
                android:textColor="@color/gray"
                android:maxLines="1"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/content_item_study"
            android:layout_width="@dimen/margin_width_40dp"
            android:layout_height="@dimen/margin_width_40dp"
            android:src="@drawable/know_study_normal"
            android:layout_below="@+id/content_item_linear_1"
            android:layout_marginEnd="@dimen/margin_width_10dp"/>
        <TextView
            android:id="@+id/content_item_study_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/content_item_study"
            android:text="@string/content_item_study_title"
            android:textColor="@color/black_1"
            android:textSize="@dimen/text_size_24sp"
            android:layout_below="@+id/content_item_linear_1"
            android:layout_marginBottom="@dimen/margin_width_10dp"/>

        <LinearLayout
            android:id="@+id/content_item_linear_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content_item_study_title"
            android:layout_marginBottom="@dimen/margin_width_10dp"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:id="@+id/content_item_use"
                android:layout_width="@dimen/margin_width_40dp"
                android:layout_height="@dimen/margin_width_40dp"
                android:src="@drawable/know_use_normal"
                android:layout_marginEnd="@dimen/margin_width_10dp"/>
            <ProgressBar
                android:id="@+id/content_item_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:max="7"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/margin_width_10dp"/>
            <TextView
                android:id="@+id/content_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_item_count"
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/gray"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/content_item_linear_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content_item_linear_2"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/content_item_master"
                android:layout_width="@dimen/margin_width_40dp"
                android:layout_height="@dimen/margin_width_40dp"
                android:layout_marginEnd="@dimen/margin_width_10dp"
                android:src="@drawable/know_master_normal" />

            <com.vargancys.learningassistant.widget.MasterProgressView
                android:id="@+id/content_item_master_level"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width_50dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
