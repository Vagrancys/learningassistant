<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_width_10dp">

    <TextView
        android:id="@+id/commend_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/commend_summary"
        android:textSize="@dimen/text_size_24sp"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/margin_width_10dp"/>
    <TextView
        android:id="@+id/commend_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/commend_time"
        android:textColor="@color/black_1"
        android:textSize="@dimen/text_size_20sp"
        android:layout_below="@+id/commend_summary"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>