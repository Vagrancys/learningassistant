<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_width_10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_title_text"
            android:textSize="@dimen/text_size_24sp"
            android:textColor="@color/black"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingEnd="@dimen/margin_width_10dp"/>
        <EditText
            android:id="@+id/item_title_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:background="@drawable/common_edit_shape"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/item_title_text"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_width_10dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/item_level_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_level_text"
                android:textSize="@dimen/text_size_24sp"
                android:textColor="@color/black"
                android:paddingEnd="@dimen/margin_width_10dp"/>
            <EditText
                android:id="@+id/item_level_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:background="@drawable/common_edit_shape"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/margin_width_50dp">
            <TextView
                android:id="@+id/item_score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_score_text"
                android:textSize="@dimen/text_size_24sp"
                android:textColor="@color/black"
                android:paddingEnd="@dimen/margin_width_10dp"/>
            <EditText
                android:id="@+id/item_score_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:background="@drawable/common_edit_shape"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/function_line_shape"
        android:layout_marginTop="@dimen/margin_width_10dp">
        <TextView
            android:id="@+id/common_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/function_cancel_text"
            android:textSize="@dimen/text_size_24sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:paddingTop="@dimen/margin_width_10dp"
            android:paddingBottom="@dimen/margin_width_10dp"/>
        <View
            android:layout_width="@dimen/margin_width_1dp"
            android:layout_height="match_parent"
            android:background="@color/black_1"/>
        <TextView
            android:id="@+id/common_determine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/function_determine_text"
            android:textColor="@color/pink"
            android:textSize="@dimen/text_size_24sp"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>