<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/item_function_shape"
    android:layout_margin="@dimen/margin_width_5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_width_10dp">
        <TextView
            android:id="@+id/item_function_common_fourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_function_common_fourth"
            android:textSize="@dimen/text_size_24sp"
            android:textColor="@color/black_2"
            android:layout_marginEnd="@dimen/margin_width_10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/item_function_title_fourth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_function_title_fourth"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_24sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/item_function_common_fourth"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_width_1dp"
        android:background="@color/black_1"
        android:layout_marginTop="@dimen/margin_width_5dp"
        android:layout_marginBottom="@dimen/margin_width_5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_width_10dp">
        <TextView
            android:id="@+id/item_function_summary_text_fourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_function_summary_fourth"
            android:textSize="@dimen/text_size_24sp"
            android:textColor="@color/black_2"
            android:layout_marginEnd="@dimen/margin_width_10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/item_function_summary_fourth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_function_summary_title_fourth"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_24sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/item_function_summary_text_fourth"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_width_1dp"
        android:background="@color/black_1"
        android:layout_marginTop="@dimen/margin_width_5dp"
        android:layout_marginBottom="@dimen/margin_width_5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_width_10dp">
        <TextView
            android:id="@+id/item_function_explain_text_fourth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_function_explain_fourth"
            android:textSize="@dimen/text_size_24sp"
            android:textColor="@color/black_2"
            android:layout_marginEnd="@dimen/margin_width_10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/item_function_explain_fourth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_function_explain_title_fourth"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_24sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/item_function_explain_text_fourth"/>
    </RelativeLayout>
</LinearLayout>