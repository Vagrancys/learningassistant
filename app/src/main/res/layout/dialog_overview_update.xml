<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/margin_width_250dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/dialog_corner_shape">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_width_10dp">
        <TextView
            android:id="@+id/update_title"
            style="@style/base_text_style"
            android:text="标题"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/update_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dialog_close_normal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/update_message"
        style="@style/base_text_style"
        android:text="提示"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:focusable="true">
        <EditText
            android:id="@+id/update_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_edit_shape"
            android:textSize="@dimen/text_size_18sp"
            android:textColor="@color/black"
            android:hint="@string/overview_update_hint_text"
            android:layout_margin="@dimen/margin_width_10dp" />
        <ImageView
            android:id="@+id/update_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/dialog_close_normal"
            android:layout_toEndOf="@+id/update_edit"
            android:layout_marginLeft="@dimen/margin_width__60dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/update_cancel"
            style="@style/base_text_style"
            android:padding="@dimen/margin_width_10dp"
            android:text="@string/common_cancel_text"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/dialog_left_cancel_shape"/>
        <TextView
            android:id="@+id/update_determine"
            style="@style/base_text_style"
            android:padding="@dimen/margin_width_10dp"
            android:text="@string/common_determine_text"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/dialog_right_determine_shape"/>
    </LinearLayout>
</LinearLayout>