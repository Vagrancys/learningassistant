<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical">
    <include layout="@layout/include_toolbar_data"/>
    <TextView
        android:id="@+id/information_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/information_title"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_24sp"
        android:layout_marginTop="@dimen/margin_width_10dp"/>
    <TextView
        android:id="@+id/information_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/information_summary"
        android:textSize="@dimen/text_size_24sp"
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/margin_width_10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_width_1dp"
        android:background="@color/white_1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:padding="@dimen/margin_width_10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/information_level"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_24sp"
                android:layout_marginEnd="@dimen/margin_width_10dp"/>
            <ImageView
                android:id="@+id/information_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/know_level_0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/overview_number_normal"
                android:layout_marginEnd="@dimen/margin_width_10dp"/>
            <TextView
                android:id="@+id/information_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/information_number"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_24sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/overview_layer_normal"
                android:layout_marginEnd="@dimen/margin_width_10dp"/>
            <TextView
                android:id="@+id/information_layer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/information_layer"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_24sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:padding="@dimen/margin_width_10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/information_recommend"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_24sp"
                android:layout_marginEnd="@dimen/margin_width_10dp"/>
            <ImageView
                android:id="@+id/information_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/know_level_0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/overview_grade_normal"
                android:layout_marginEnd="@dimen/margin_width_10dp"/>
            <TextView
                android:id="@+id/information_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/information_grade"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_24sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/overview_people_normal"
                android:layout_marginEnd="@dimen/margin_width_10dp"/>
            <TextView
                android:id="@+id/information_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/information_people"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_24sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_width_1dp"
        android:background="@color/white_1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_width_10dp"
        android:gravity="center|start">
        <ImageView
            android:id="@+id/information_author_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/overview_avatar_normal"
            android:layout_marginEnd="@dimen/margin_width_10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/information_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/information_author"
            android:textSize="@dimen/text_size_20sp"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/information_author_img"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/information_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/information_time"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18sp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>