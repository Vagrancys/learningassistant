<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_width_5dp">
    <RelativeLayout
        android:layout_width="@dimen/margin_width_200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/comment_edit_shape"
        android:padding="@dimen/margin_width_5dp">
        <TextView
            android:id="@+id/history_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_number"
            android:textSize="@dimen/text_size_24sp"
            android:textColor="@color/black"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="@dimen/margin_width_5dp"/>
        <TextView
            android:id="@+id/history_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_time"
            android:textColor="@color/black_2"
            android:textSize="@dimen/text_size_20sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/history_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_title"
            android:textSize="@dimen/text_size_24sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/history_number"
            android:paddingBottom="@dimen/margin_width_5dp"/>
        <TextView
            android:id="@+id/history_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_summary"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_22sp"
            android:layout_below="@+id/history_title"
            android:gravity="center"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</FrameLayout>
