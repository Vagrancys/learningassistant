<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/include_toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_width_10dp"
                android:layout_marginBottom="@dimen/margin_width_10dp"
                android:orientation="horizontal"
                android:gravity="center|top">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/insert_title"
                    android:textSize="@dimen/text_size_20sp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="@dimen/margin_width_10dp"/>
                <EditText
                    android:id="@+id/insert_title_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/insert_hint_title"
                    android:minLines="2"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20sp"
                    android:background="@drawable/common_edit_shape"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_width_10dp"
                android:layout_marginBottom="@dimen/margin_width_10dp"
                android:orientation="horizontal"
                android:gravity="center|top">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/insert_summary"
                    android:textSize="@dimen/text_size_20sp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="@dimen/margin_width_10dp"/>
                <EditText
                    android:id="@+id/insert_summary_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/insert_hint_summary"
                    android:minLines="3"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20sp"
                    android:background="@drawable/common_edit_shape"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_width_10dp"
                android:layout_marginBottom="@dimen/margin_width_10dp"
                android:orientation="horizontal"
                android:gravity="center|top">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/insert_show"
                    android:textSize="@dimen/text_size_20sp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="@dimen/margin_width_10dp"/>
                <EditText
                    android:id="@+id/insert_show_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/insert_hint_show"
                    android:minLines="5"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20sp"
                    android:background="@drawable/common_edit_shape"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_width_10dp"
                android:layout_marginBottom="@dimen/margin_width_10dp"
                android:orientation="horizontal"
                android:gravity="center|top">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/insert_explain"
                    android:textSize="@dimen/text_size_20sp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="@dimen/margin_width_10dp"/>
                <EditText
                    android:id="@+id/insert_explain_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/insert_hint_explain"
                    android:minLines="4"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20sp"
                    android:background="@drawable/common_edit_shape"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_width_10dp"
                android:layout_marginBottom="@dimen/margin_width_10dp"
                android:orientation="horizontal"
                android:gravity="center|top">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/insert_heed"
                    android:textSize="@dimen/text_size_20sp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="@dimen/margin_width_10dp"/>
                <EditText
                    android:id="@+id/insert_heed_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/insert_hint_heed"
                    android:minLines="3"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20sp"
                    android:background="@drawable/common_edit_shape"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_width_10dp"
                android:layout_marginBottom="@dimen/margin_width_10dp"
                android:orientation="horizontal"
                android:gravity="center|top">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/insert_experience"
                    android:textSize="@dimen/text_size_20sp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="@dimen/margin_width_10dp"/>
                <EditText
                    android:id="@+id/insert_experience_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/insert_hint_experience"
                    android:minLines="6"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20sp"
                    android:background="@drawable/common_edit_shape"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>