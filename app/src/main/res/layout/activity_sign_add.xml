<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/include_toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_width_10dp">
        <TextView
            android:id="@+id/sign_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_title_text"
            android:textColor="@color/black_2"
            android:textSize="@dimen/text_size_24sp"
            android:layout_marginEnd="@dimen/margin_width_10dp"
            android:layout_centerVertical="true"/>
        <EditText
            android:id="@+id/sign_title_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_edit_shape"
            android:hint="@string/sign_title_hint"
            android:minLines="1"
            android:inputType="text"
            android:layout_toEndOf="@+id/sign_title"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_width_10dp"
        android:layout_marginTop="@dimen/margin_width_10dp"
        android:padding="@dimen/margin_width_10dp">
        <TextView
            android:id="@+id/sign_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_summary_text"
            android:textSize="@dimen/text_size_24sp"
            android:textColor="@color/black_2"
            android:layout_marginEnd="@dimen/margin_width_10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"/>
        <EditText
            android:id="@+id/sign_summary_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_edit_shape"
            android:hint="@string/sign_summary_hint"
            android:minLines="2"
            android:inputType="text"
            android:layout_toEndOf="@+id/sign_summary"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_prompt"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_24sp"
        android:padding="@dimen/margin_width_10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:orientation="vertical"
        android:padding="@dimen/margin_width_10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_width_10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_subject_title"
                android:textSize="@dimen/text_size_20sp"
                android:textColor="@color/black_2"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/sign_subject_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_subject_progress"
                android:textColor="@color/black_1"
                android:textSize="@dimen/text_size_16sp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_width_10dp"
                android:layout_marginEnd="@dimen/margin_width_10dp"/>
        </RelativeLayout>
        <ProgressBar
            android:id="@+id/sign_subject_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:max="100"
            android:progress="10"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:orientation="vertical"
        android:padding="@dimen/margin_width_10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_width_10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_score_title"
                android:textSize="@dimen/text_size_20sp"
                android:textColor="@color/black_2"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/sign_score_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_score_progress"
                android:textColor="@color/black_1"
                android:textSize="@dimen/text_size_16sp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_width_10dp"
                android:layout_marginEnd="@dimen/margin_width_10dp"/>
        </RelativeLayout>
        <ProgressBar
            android:id="@+id/sign_score_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:max="100"
            android:progress="10"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:orientation="vertical"
        android:padding="@dimen/margin_width_10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_width_10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_error_title"
                android:textSize="@dimen/text_size_20sp"
                android:textColor="@color/black_2"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/sign_error_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_error_progress"
                android:textColor="@color/black_1"
                android:textSize="@dimen/text_size_16sp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_width_10dp"
                android:layout_marginEnd="@dimen/margin_width_10dp"/>
        </RelativeLayout>
        <ProgressBar
            android:id="@+id/sign_error_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:max="100"
            android:progress="10"/>
    </LinearLayout>
</LinearLayout>