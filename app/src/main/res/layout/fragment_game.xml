<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top">
    <include layout="@layout/include_game"/>
    <TextView
        android:id="@+id/game_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_title"
        android:textSize="@dimen/text_size_24sp"
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/margin_width_20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/game_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_subject"
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/margin_width_10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_subject_text"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_24sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/game_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_error"
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/margin_width_10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_error_text"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_24sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/game_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_score"
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/margin_width_10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_score_text"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_24sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/game_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_level"
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/margin_width_10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_level_text"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_24sp"/>
        </LinearLayout>
    </LinearLayout>
    
</LinearLayout>