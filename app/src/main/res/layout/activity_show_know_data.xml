<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <include
        layout="@layout/include_toolbar_data"/>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linear">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|start">
            <TextView
                android:id="@+id/know_data_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/know_data_title"
                android:textSize="@dimen/text_size_24sp"
                android:textColor="@color/black"
                android:padding="@dimen/margin_width_20dp"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_width_10dp">
                <TableRow
                    android:gravity="start|center"
                    android:padding="@dimen/margin_width_5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/know_data_level_text"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_24sp"
                        android:layout_marginEnd="@dimen/margin_width_10dp"/>
                    <ImageView
                        android:id="@+id/know_data_level"
                        android:layout_width="@dimen/margin_width_50dp"
                        android:layout_height="@dimen/margin_width_50dp"
                        android:src="@drawable/know_level_1"
                        android:layout_column="1"/>
                </TableRow>
                <TableRow
                    android:gravity="start|center"
                    android:padding="@dimen/margin_width_5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/know_data_count_text"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_24sp"
                        android:layout_marginEnd="@dimen/margin_width_10dp"/>
                    <TextView
                        android:id="@+id/know_data_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/know_data_count"
                        android:textSize="@dimen/text_size_22sp"
                        android:textColor="@color/black"/>
                </TableRow>
                <TableRow
                    android:gravity="start|center"
                    android:padding="@dimen/margin_width_5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/know_data_master_text"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_24sp"
                        android:layout_marginEnd="@dimen/margin_width_10dp"/>
                    <TextView
                        android:id="@+id/know_data_master"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/know_data_master"
                        android:textSize="@dimen/text_size_22sp"
                        android:textColor="@color/black"/>
                </TableRow>
                <TableRow
                    android:gravity="start|center"
                    android:padding="@dimen/margin_width_5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/know_data_time_text"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_24sp"
                        android:layout_marginEnd="@dimen/margin_width_10dp"/>
                    <TextView
                        android:id="@+id/know_data_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/know_data_time"
                        android:textSize="@dimen/text_size_22sp"
                        android:textColor="@color/black"/>
                </TableRow>
            </TableLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/know_data_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/know_data_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/know_data_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_width_10dp">
                <TextView
                    android:id="@+id/know_data_history_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/know_data_history_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_24sp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:paddingEnd="@dimen/margin_width_10dp"/>
                <TextView
                    android:id="@+id/know_data_history_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/know_data_history_count"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_24sp"
                    android:layout_toEndOf="@+id/know_data_history_text"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/know_data_history_time"
                    android:textSize="@dimen/text_size_24sp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/history_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:scrollbars="none"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="fill_vertical"
                android:padding="@dimen/margin_width_10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_24sp"
                    android:text="@string/know_data_commend_text"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/know_data_commend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/know_data_commend_count"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_24sp"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/commend_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:scrollbars="none"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/margin_width_10dp"
        android:gravity="center">
        <EditText
            android:id="@+id/know_data_commend_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minLines="1"
            android:hint="@string/know_data_commend_hint"
            android:background="@drawable/common_edit_shape"
            android:layout_marginEnd="@dimen/margin_width_10dp"/>
        <ImageView
            android:id="@+id/know_data_commend_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/commend_send_selector"/>
    </LinearLayout>
</RelativeLayout>