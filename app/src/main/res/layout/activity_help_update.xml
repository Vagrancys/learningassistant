<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/include_toolbar"/>
    <RelativeLayout
        android:id="@+id/update_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_width_10dp"
        android:layout_marginBottom="@dimen/margin_width_10dp">
        <LinearLayout
            android:id="@+id/update_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_width_20dp">
            <TextView
                android:id="@+id/help_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help_number"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_28sp"
                android:layout_marginEnd="@dimen/margin_width_20dp"/>
            <EditText
                android:id="@+id/help_title_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/help_title"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_24sp"
                android:background="@drawable/common_edit_shape"/>
        </LinearLayout>

        <TextView
            android:id="@+id/help_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_text"
            android:textSize="@dimen/text_size_20sp"
            android:textColor="@color/black"
            android:layout_below="@+id/update_linear"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/margin_width_10dp"/>
        <EditText
            android:id="@+id/help_summary_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/help_summary"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_24sp"
            android:background="@drawable/common_edit_shape"
            android:layout_toEndOf="@+id/help_text"
            android:layout_below="@+id/update_linear"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/update_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/update_empty"
        android:textSize="@dimen/text_size_24sp"
        android:textColor="@color/black"
        android:visibility="gone"/>
</LinearLayout>