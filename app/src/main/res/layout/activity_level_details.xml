<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/include_toolbar_data"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|top">
            <TextView
                android:id="@+id/level_details_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/level_details_title_text"
                android:textSize="@dimen/text_size_24sp"
                android:textColor="@color/black"/>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_width_10dp">
            <LinearLayout
                style="@style/mine_data_linear_style">
                <TextView
                    android:id="@+id/level_details_level"
                    style="@style/mine_data_style"
                    android:layout_marginBottom="@dimen/margin_width_5dp"
                    android:text="@string/level_details_level_text"/>
                <TextView
                    style="@style/mine_data_style"
                    android:text="@string/level_details_level_foot_text"/>
            </LinearLayout>
            <LinearLayout
                style="@style/mine_data_linear_style">
                <TextView
                    android:id="@+id/level_details_experience"
                    style="@style/mine_data_style"
                    android:layout_marginBottom="@dimen/margin_width_5dp"
                    android:text="@string/level_details_experience_text"/>
                <TextView
                    style="@style/mine_data_style"
                    android:text="@string/level_details_experience_foot_text"/>
            </LinearLayout>
            <LinearLayout
                style="@style/mine_data_linear_style">
                <TextView
                    android:id="@+id/level_details_next_experience"
                    style="@style/mine_data_style"
                    android:layout_marginBottom="@dimen/margin_width_5dp"
                    android:text="@string/level_details_next_experience_text"/>
                <TextView
                    style="@style/mine_data_style"
                    android:text="@string/level_details_next_experience_foot_text"/>
            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/margin_width_10dp">
                <LinearLayout
                    style="@style/mine_data_linear_style">
                    <TextView
                        android:id="@+id/level_details_privilege"
                        style="@style/mine_data_style"
                        android:layout_marginBottom="@dimen/margin_width_5dp"
                        android:text="@string/level_details_privilege_text"/>
                    <TextView
                        style="@style/mine_data_style"
                        android:text="@string/level_details_privilege_foot_text"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/mine_data_linear_style">
                    <TextView
                        android:id="@+id/level_details_rank"
                        style="@style/mine_data_style"
                        android:layout_marginBottom="@dimen/margin_width_5dp"
                        android:text="@string/level_details_rank_text"/>
                    <TextView
                        style="@style/mine_data_style"
                        android:text="@string/level_details_rank_foot_text"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/mine_data_linear_style">
                    <TextView
                        android:id="@+id/level_details_time"
                        style="@style/mine_data_style"
                        android:layout_marginBottom="@dimen/margin_width_5dp"
                        android:text="@string/level_details_time_text"/>
                    <TextView
                        style="@style/mine_data_style"
                        android:text="@string/level_details_time_foot_text"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/level_details_line_text"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_24sp"
                android:padding="@dimen/margin_width_10dp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>