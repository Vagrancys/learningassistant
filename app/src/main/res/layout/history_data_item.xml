<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_width_5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_width_10dp">
        <TextView
            android:id="@+id/history_data_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_data_number"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_30sp"
            android:layout_alignParentStart="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/history_data_time"
            android:layout_marginEnd="@dimen/margin_width_5dp"
            android:text="@string/history_data_time_text"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20sp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/history_data_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_data_time"
            android:textSize="@dimen/text_size_18sp"
            android:textColor="@color/black_1"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/margin_width_10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_data_title_text"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_24sp"
            android:paddingEnd="@dimen/margin_width_10dp"/>
        <TextView
            android:id="@+id/history_data_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_data_title"
            android:textSize="@dimen/text_size_24sp"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:maxLines="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/margin_width_10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_data_summary_text"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_24sp"
            android:paddingEnd="@dimen/margin_width_10dp"/>
        <TextView
            android:id="@+id/history_data_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_data_summary"
            android:textSize="@dimen/text_size_24sp"
            android:textColor="@color/black"
            android:maxLines="2"
            android:ellipsize="end"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/history_anim_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_width_10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/history_data_show_text"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_24sp"
                android:paddingEnd="@dimen/margin_width_10dp"/>
            <TextView
                android:id="@+id/history_data_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/history_data_show"
                android:textSize="@dimen/text_size_24sp"
                android:textColor="@color/black"
                android:maxLines="2"
                android:ellipsize="end"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_width_10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/history_data_explain_text"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_24sp"
                android:paddingEnd="@dimen/margin_width_10dp"/>
            <TextView
                android:id="@+id/history_data_explain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/history_data_explain"
                android:textSize="@dimen/text_size_24sp"
                android:textColor="@color/black"
                android:maxLines="2"
                android:ellipsize="end"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_width_10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/history_data_experience_text"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_24sp"
                android:paddingEnd="@dimen/margin_width_10dp"/>
            <TextView
                android:id="@+id/history_data_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/history_data_experience"
                android:textSize="@dimen/text_size_24sp"
                android:textColor="@color/black"
                android:maxLines="2"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/history_anim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/history_anim_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/history_anim_show_title"
            android:textSize="@dimen/text_size_20sp"
            android:textColor="@color/black"
            android:layout_marginEnd="@dimen/margin_width_10dp"/>
        <ImageView
            android:id="@+id/history_anim_img"
            android:layout_width="@dimen/margin_width_20dp"
            android:layout_height="@dimen/margin_width_20dp"
            android:src="@drawable/history_top_normal"
            android:rotation="180"/>
    </LinearLayout>
</LinearLayout>