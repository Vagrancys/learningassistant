<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/include_toolbar"/>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:padding="@dimen/margin_width_10dp">
            <TextView
                style="@style/base_text_style"
                android:text="@string/aided_common_directory"
                android:layout_marginBottom="@dimen/margin_width_10dp"/>

            <TextView
                android:id="@+id/aided_show_directory"
                style="@style/text_show_style"/>

            <View
                style="@style/view_common_style"/>

            <TextView
                style="@style/base_text_style"
                android:text="@string/aided_common_explain"
                android:layout_marginBottom="@dimen/margin_width_10dp"/>

            <TextView
                android:id="@+id/aided_show_explain"
                style="@style/text_show_style"/>

            <View
                style="@style/view_common_style"/>

            <TextView
                style="@style/base_text_style"
                android:text="@string/aided_common_deep_explain"
                android:layout_marginBottom="@dimen/margin_width_10dp"/>

            <TextView
                android:id="@+id/aided_show_deep_explain"
                style="@style/text_show_style"/>

            <View
                style="@style/view_common_style"/>

            <TextView
                style="@style/base_text_style"
                android:text="@string/aided_common_case"
                android:layout_marginBottom="@dimen/margin_width_10dp"/>

            <TextView
                android:id="@+id/aided_show_case"
                style="@style/text_show_style"/>

            <View
                style="@style/view_common_style"/>

            <TextView
                style="@style/base_text_style"
                android:text="@string/aided_common_experience"
                android:layout_marginEnd="@dimen/margin_width_10dp"/>
            <TextView
                android:id="@+id/aided_show_experience"
                style="@style/text_show_style"/>

            <View
                style="@style/view_common_style"/>

            <TextView
                style="@style/base_text_style"
                android:text="@string/aided_common_advanced"
                android:layout_marginBottom="@dimen/margin_width_10dp"/>
            <TextView
                android:id="@+id/aided_show_advanced"
                style="@style/text_show_style"/>

            <View
                style="@style/view_common_style"/>

            <TextView
                style="@style/base_text_style"
                android:text="@string/aided_common_publicize"
                android:layout_marginBottom="@dimen/margin_width_10dp"/>
            <TextView
                android:id="@+id/aided_show_publicize"
                style="@style/text_show_style"/>
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/include_know_empty"/>
</LinearLayout>