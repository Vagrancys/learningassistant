<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/include_toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_width_10dp"
                android:layout_marginBottom="@dimen/margin_width_10dp"
                android:orientation="vertical"
                android:gravity="start|top">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/update_title_third"
                    android:textSize="@dimen/text_size_20sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="@dimen/margin_width_10dp"/>
                <EditText
                    android:id="@+id/update_title_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/update_hint_title_third"
                    android:minLines="2"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20sp"
                    android:background="@drawable/common_edit_shape"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width_1dp"
                android:background="@color/black_1"
                android:layout_marginBottom="@dimen/margin_width_5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_width_10dp"
                android:layout_marginBottom="@dimen/margin_width_10dp"
                android:orientation="vertical"
                android:gravity="start|top">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/update_summary_third"
                    android:textSize="@dimen/text_size_20sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="@dimen/margin_width_10dp"/>
                <EditText
                    android:id="@+id/update_summary_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/update_hint_summary_third"
                    android:minLines="3"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20sp"
                    android:background="@drawable/common_edit_shape"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width_1dp"
                android:background="@color/black_1"
                android:layout_marginBottom="@dimen/margin_width_5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_width_10dp"
                android:layout_marginBottom="@dimen/margin_width_10dp"
                android:orientation="vertical"
                android:gravity="start">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/update_show_third"
                    android:textSize="@dimen/text_size_20sp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="@dimen/margin_width_10dp"/>
                <EditText
                    android:id="@+id/update_show_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/update_hint_show_third"
                    android:minLines="3"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20sp"
                    android:background="@drawable/common_edit_shape"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width_1dp"
                android:background="@color/black_1"
                android:layout_marginBottom="@dimen/margin_width_5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_width_10dp"
                android:layout_marginBottom="@dimen/margin_width_10dp"
                android:orientation="vertical"
                android:gravity="start">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/update_explain_third"
                    android:textSize="@dimen/text_size_20sp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="@dimen/margin_width_10dp"/>
                <EditText
                    android:id="@+id/update_explain_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/update_hint_explain_third"
                    android:minLines="3"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20sp"
                    android:background="@drawable/common_edit_shape"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width_1dp"
                android:background="@color/black_1"
                android:layout_marginBottom="@dimen/margin_width_5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_width_10dp"
                android:layout_marginBottom="@dimen/margin_width_10dp"
                android:orientation="vertical"
                android:gravity="start|top">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/update_heed_third"
                    android:textSize="@dimen/text_size_20sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="@dimen/margin_width_10dp"/>
                <EditText
                    android:id="@+id/update_heed_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/update_hint_heed_third"
                    android:minLines="3"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20sp"
                    android:background="@drawable/common_edit_shape"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width_1dp"
                android:background="@color/black_1"
                android:layout_marginBottom="@dimen/margin_width_5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_width_10dp"
                android:layout_marginBottom="@dimen/margin_width_10dp"
                android:orientation="vertical"
                android:gravity="start|top">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/update_experience_third"
                    android:textSize="@dimen/text_size_20sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="@dimen/margin_width_10dp"/>
                <EditText
                    android:id="@+id/update_experience_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/update_hint_experience_third"
                    android:minLines="6"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20sp"
                    android:background="@drawable/common_edit_shape"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>