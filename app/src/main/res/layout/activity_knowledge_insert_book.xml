<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="@color/pink">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetStart="@dimen/margin_width_0dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_width_10dp">
                <ImageView
                    android:id="@+id/common_back"
                    android:layout_width="@dimen/margin_width_30dp"
                    android:layout_height="@dimen/margin_width_30dp"
                    android:src="@drawable/common_back_normal"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/common_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/common_default"
                    android:textSize="@dimen/text_size_24sp"
                    android:textColor="@color/white"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:id="@+id/book_data"
                    android:layout_width="@dimen/margin_width_30dp"
                    android:layout_height="@dimen/margin_width_30dp"
                    android:src="@drawable/common_insert_normal"
                    android:layout_marginEnd="@dimen/margin_width_10dp"
                    android:layout_toStartOf="@+id/book_add"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:id="@+id/book_add"
                    android:layout_width="@dimen/margin_width_30dp"
                    android:layout_height="@dimen/margin_width_30dp"
                    android:src="@drawable/know_content_data_normal"
                    android:layout_centerInParent="true"
                    android:layout_toStartOf="@+id/book_save"/>
                <ImageView
                    android:id="@+id/book_save"
                    android:layout_width="@dimen/margin_width_30dp"
                    android:layout_height="@dimen/margin_width_30dp"
                    android:src="@drawable/common_insert_normal"
                    android:layout_marginEnd="@dimen/margin_width_10dp"
                    android:layout_toStartOf="@+id/book_add"
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/book_title"
            style="@style/base_text_style"
            android:text="@string/book_insert_title"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/book_index"
            style="@style/base_text_style"
            android:text="@string/no_text"
            android:textColor="@color/black_1"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/book_title"/>
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/book_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>