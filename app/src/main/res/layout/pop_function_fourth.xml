<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:focusableInTouchMode="true"
    android:focusable="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_width_10dp"
        android:padding="@dimen/margin_width_10dp" >
        <Spinner
            android:id="@+id/function_common"
            android:layout_width="@dimen/margin_width_80dp"
            android:layout_height="wrap_content"
            android:entries="@array/common_level"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_width_10dp"/>
        <EditText
            android:id="@+id/function_title_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/function_title_edit"
            android:maxLines="1"
            android:gravity="start"
            android:background="@drawable/common_edit_shape"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/function_common"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_width_1dp"
        android:background="@color/black_1"
        android:layout_marginBottom="@dimen/margin_width_5dp"
        android:layout_marginTop="@dimen/margin_width_5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_width_10dp"
        android:padding="@dimen/margin_width_10dp">
        <TextView
            android:id="@+id/function_summary_title"
            android:layout_width="@dimen/margin_width_60dp"
            android:layout_height="wrap_content"
            android:text="@string/function_summary_title"
            android:textSize="@dimen/text_size_20sp"
            android:textColor="@color/black_2"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="@dimen/margin_width_10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>
        <EditText
            android:id="@+id/function_summary_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/function_summary_edit"
            android:minLines="2"
            android:gravity="start"
            android:background="@drawable/common_edit_shape"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/function_summary_title"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_width_1dp"
        android:background="@color/black_1"
        android:layout_marginBottom="@dimen/margin_width_5dp"
        android:layout_marginTop="@dimen/margin_width_5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_width_10dp"
        android:padding="@dimen/margin_width_10dp">
        <TextView
            android:id="@+id/function_explain_title"
            android:layout_width="@dimen/margin_width_60dp"
            android:layout_height="wrap_content"
            android:text="@string/function_explain_title"
            android:textColor="@color/black_2"
            android:textSize="@dimen/text_size_20sp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="@dimen/margin_width_10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>
        <EditText
            android:id="@+id/function_explain_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/function_explain_edit"
            android:minLines="2"
            android:gravity="start"
            android:background="@drawable/common_edit_shape"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/function_explain_title"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/function_line_shape">
        <TextView
            android:id="@+id/function_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/function_cancel_text"
            android:textSize="@dimen/text_size_24sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:paddingTop="@dimen/margin_width_10dp"
            android:paddingBottom="@dimen/margin_width_10dp"/>
        <View
            android:layout_width="@dimen/margin_width_1dp"
            android:layout_height="match_parent"
            android:background="@color/black_1"/>
        <TextView
            android:id="@+id/function_determine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/function_determine_text"
            android:textColor="@color/pink"
            android:textSize="@dimen/text_size_24sp"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>
