<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/include_toolbar"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/margin_width_10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="@dimen/margin_width_5dp">
                <TextView
                    android:id="@+id/subject_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_24sp"
                    android:text="@string/subject_title"
                    android:textColor="@color/black"
                    android:layout_marginBottom="@dimen/margin_width_10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/subject_last_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/subject_last_time"
                            android:textColor="@color/black_2"
                            android:textSize="@dimen/text_size_16sp"
                            android:layout_marginBottom="@dimen/margin_width_5dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/subject_last_time_text"
                            android:textSize="@dimen/text_size_20sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/margin_width_1dp"
                        android:layout_height="@dimen/margin_width_30dp"
                        android:background="@color/white_1"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/subject_problem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/subject_problem"
                            android:textColor="@color/black_2"
                            android:textSize="@dimen/text_size_16sp"
                            android:layout_marginBottom="@dimen/margin_width_5dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/subject_problem_text"
                            android:textSize="@dimen/text_size_20sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/margin_width_1dp"
                        android:layout_height="@dimen/margin_width_30dp"
                        android:background="@color/white_1"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/subject_error"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/subject_error"
                            android:textColor="@color/black_2"
                            android:textSize="@dimen/text_size_16sp"
                            android:layout_marginBottom="@dimen/margin_width_5dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/subject_error_text"
                            android:textSize="@dimen/text_size_20sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <View
                        android:layout_width="@dimen/margin_width_1dp"
                        android:layout_height="@dimen/margin_width_30dp"
                        android:background="@color/white_1"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/subject_answer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/subject_answer"
                            android:textColor="@color/black_2"
                            android:textSize="@dimen/text_size_16sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/subject_answer_text"
                            android:textSize="@dimen/text_size_20sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <include layout="@layout/fragment_empty"/>
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>