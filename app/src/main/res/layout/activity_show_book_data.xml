<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <include
        android:id="@+id/toolbar"
        layout="@layout/include_toolbar_data"/>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center|top">
            <TextView
                android:id="@+id/knowledge_data_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/know_data_title"
                android:textSize="@dimen/text_size_24sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:padding="@dimen/margin_width_20dp"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_width_10dp">
                <TableRow
                    android:gravity="start|center"
                    android:padding="@dimen/margin_width_5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/know_data_level_text"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_24sp"
                        android:layout_marginEnd="@dimen/margin_width_10dp"/>
                    <ImageView
                        android:id="@+id/knowledge_data_level"
                        android:layout_width="@dimen/margin_width_50dp"
                        android:layout_height="@dimen/margin_width_50dp"
                        android:src="@drawable/know_level_1"
                        android:layout_column="1"/>
                </TableRow>
                <TableRow
                    android:gravity="start|center"
                    android:padding="@dimen/margin_width_5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/know_data_count_text"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_24sp"
                        android:layout_marginEnd="@dimen/margin_width_10dp"/>
                    <TextView
                        android:id="@+id/knowledge_data_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/know_data_count"
                        android:textSize="@dimen/text_size_22sp"
                        android:textColor="@color/black"/>
                </TableRow>
                <TableRow
                    android:gravity="start|center"
                    android:padding="@dimen/margin_width_5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/know_data_master_text"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_24sp"
                        android:layout_marginEnd="@dimen/margin_width_10dp"/>
                    <TextView
                        android:id="@+id/knowledge_data_master"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/know_data_master"
                        android:textSize="@dimen/text_size_22sp"
                        android:textColor="@color/black"/>
                </TableRow>
            </TableLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_width_1dp"
                android:background="@color/black_1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_width_10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/knowledge_data_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/know_data_update_normal"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/knowledge_data_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/know_data_delete_normal"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/knowledge_data_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/know_data_setting_normal"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>