<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/margin_width_160dp"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_width_10dp">
    <TextView
        android:id="@+id/dialog_title"
        style="@style/base_text_style"
        android:text="标题"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>
    <ImageView
        android:id="@+id/dialog_close"
        android:layout_width="@dimen/margin_width_20dp"
        android:layout_height="@dimen/margin_width_20dp"
        android:src="@drawable/dialog_close_normal"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/dialog_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_width_10dp">
        <TextView
            android:id="@+id/dialog_insert"
            style="@style/base_text_style"
            android:text="添加知识"
            android:layout_marginBottom="@dimen/margin_width_10dp"/>
        <TextView
            android:id="@+id/dialog_update"
            style="@style/base_text_style"
            android:text="更新知识"
            android:layout_marginBottom="@dimen/margin_width_10dp"/>
        <TextView
            android:id="@+id/dialog_delete"
            style="@style/base_text_style"
            android:text="删除知识"
            android:layout_marginBottom="@dimen/margin_width_10dp"/>
    </LinearLayout>
</RelativeLayout>