                android:id="@+id/problem_answer_radio_second_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/problem_answer_radio_second_head"
                android:src="@drawable/subject_yes_normal"/>
            <TextView
                android:id="@+id/problem_answer_radio_second_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/problem_answer_radio_second_head"
                android:text="@string/problem_answer_radio_second_title"
                android:textSize="@dimen/text_size_24sp"
                android:textColor="@color/black"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
