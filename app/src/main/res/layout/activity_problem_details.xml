<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top">
    <include layout="@layout/include_toolbar_data"/>
    <TextView
        android:id="@+id/problem_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/problem_details_title_text"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_30sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_width_10dp">
        <LinearLayout
            style="@style/mine_data_linear_style">
            <TextView
                android:id="@+id/problem_details_count"
                style="@style/mine_data_style"
                android:text="@string/mine_problem_count_text"/>
            <TextView
                style="@style/mine_data_style"
                android:text="@string/mine_problem_count_foot_text"/>
        </LinearLayout>
        <LinearLayout
            style="@style/mine_data_linear_style">
            <TextView
                android:id="@+id/problem_details_level"
                style="@style/mine_data_style"
                android:text="@string/mine_level_text"/>
            <TextView
                style="@style/mine_data_style"
                android:text="@string/mine_level_foot_text"/>
        </LinearLayout>
        <LinearLayout
            style="@style/mine_data_linear_style">
            <TextView
                android:id="@+id/problem_details_people"
                style="@style/mine_data_style"
                android:text="@string/mine_people_text"/>
            <TextView
                style="@style/mine_data_style"
                android:text="@string/mine_people_foot_text"/>
        </LinearLayout>
        <LinearLayout
            style="@style/mine_data_linear_style">
            <TextView
                android:id="@+id/problem_details_use"
                style="@style/mine_data_style"
                android:text="@string/mine_use_text"/>
            <TextView
                style="@style/mine_data_style"
                android:text="@string/mine_use_foot_text"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/problem_answer_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/problem_answer_head"
            android:textSize="@dimen/text_size_24sp"
            android:textColor="@color/black"
            android:paddingRight="@dimen/margin_width_10dp"/>
        <TextView
            android:id="@+id/problem_details_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/problem_answer_head"
            android:layout_alignParentTop="true"
            android:text="@string/problem_details_answer_text"
            android:textSize="@dimen/text_size_24sp"
            android:textColor="@color/black"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/problem_details_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <RelativeLayout
