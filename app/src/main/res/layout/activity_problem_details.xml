            <TextView
                android:id="@+id/problem_answer_radio_third_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/problem_answer_radio_third_head"
                android:text="@string/problem_answer_radio_third_title"
                android:textSize="@dimen/text_size_24sp"
                android:textColor="@color/black"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/problem_answer_radio_fourth_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/problem_answer_radio_fourth_text"
                android:textSize="@dimen/text_size_24sp"
                android:textColor="@color/black"/>
            <ImageView
                android:id="@+id/problem_answer_radio_fourth_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/problem_answer_radio_fourth_head"
