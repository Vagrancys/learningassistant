<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_width_10dp">
    <TextView
        android:id="@+id/commend_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/commend_number"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="@dimen/margin_width_5dp"/>
    <TextView
        android:id="@+id/commend_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/commend_time"
        android:textSize="@dimen/text_size_24sp"
        android:textColor="@color/black"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/commend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/commend_title"
        android:textSize="@dimen/text_size_24sp"
        android:textColor="@color/black"
        android:layout_below="@+id/commend_number"/>
</RelativeLayout>