<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/margin_width_250dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/dialog_corner_shape"
    android:focusableInTouchMode="true"
    android:focusable="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_width_10dp">
        <TextView
            android:id="@+id/insert_title"
            style="@style/base_text_style"
            android:text="@string/overview_insert_hint_text"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/insert_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dialog_close_normal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin_width_10dp">
        <TextView
            style="@style/base_text_style"
            android:text="@string/dialog_insert_title_text"
            android:layout_marginRight="@dimen/margin_width_10dp"/>
        <EditText
            android:id="@+id/insert_title_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_edit_shape"
            android:inputType="text"
            android:textSize="@dimen/text_size_18sp"
            android:textColor="@color/black"
            android:hint="@string/overview_insert_hint_text"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin_width_10dp">
        <TextView
            style="@style/base_text_style"
            android:text="@string/dialog_insert_title_text"
            android:layout_marginRight="@dimen/margin_width_10dp"/>
        <EditText
            android:id="@+id/insert_summary_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_edit_shape"
            android:inputType="text"
            android:minLines="2"
            android:textSize="@dimen/text_size_18sp"
            android:textColor="@color/black"
            android:hint="@string/overview_insert_hint_text"/>
    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:gravity="center|start"
       android:layout_margin="@dimen/margin_width_10dp">
       <TextView
           style="@style/base_text_style"
           android:text="@string/dialog_insert_level_text"
           android:layout_marginRight="@dimen/margin_width_10dp"/>
       <Spinner
           android:id="@+id/insert_spinner"
           android:layout_width="@dimen/margin_width_100dp"
           android:layout_height="wrap_content"
           android:entries="@array/level_title"/>
   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin_width_10dp">
        <TextView
            style="@style/base_text_style"
            android:text="@string/dialog_insert_title_text"
            android:layout_marginRight="@dimen/margin_width_10dp"/>
        <EditText
            android:id="@+id/insert_score_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_edit_shape"
            android:inputType="number"
            android:textSize="@dimen/text_size_18sp"
            android:textColor="@color/black"
            android:hint="@string/overview_insert_hint_text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/insert_cancel"
            style="@style/base_text_style"
            android:padding="@dimen/margin_width_10dp"
            android:text="@string/common_cancel_text"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/dialog_left_cancel_shape"/>
        <TextView
            android:id="@+id/insert_determine"
            style="@style/base_text_style"
            android:padding="@dimen/margin_width_10dp"
            android:text="@string/common_determine_text"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/dialog_right_determine_shape"/>
    </LinearLayout>
</LinearLayout>