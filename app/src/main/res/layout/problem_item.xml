<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_width_10dp">
    <TextView
        android:id="@+id/problem_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/knowledge_number_text"
        android:textSize="@dimen/text_size_24sp"
        android:textColor="@color/black"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/problem_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/knowledge_title_text"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_24sp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/problem_type"
        android:layout_toEndOf="@+id/problem_level"/>
    <TextView
        android:id="@+id/problem_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/problem_type_text"
        android:textSize="@dimen/text_size_24sp"
        android:textColor="@color/black"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>
    <TextView
        android:id="@+id/problem_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/knowledge_summary_text"
        android:textSize="@dimen/text_size_24sp"
        android:textColor="@color/black"
        android:layout_below="@+id/problem_title"
        android:layout_marginBottom="@dimen/margin_width_10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end|center"
        android:orientation="horizontal"
        android:layout_below="@+id/problem_context">
        <ImageView
            android:id="@+id/knowledge_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_width_5dp"/>
        <TextView
            android:id="@+id/problem_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/knowledge_people_text"
            android:textSize="@dimen/text_size_24sp"
            android:textColor="@color/black"
            android:layout_marginRight="@dimen/margin_width_5dp"/>
        <TextView
            android:id="@+id/problem_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/knowledge_look_text"
            android:textSize="@dimen/text_size_24sp"
            android:textColor="@color/black"
            android:layout_marginRight="@dimen/margin_width_5dp"/>
        <TextView
            android:id="@+id/problem_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/knowledge_time_text"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_24sp"/>
    </LinearLayout>

</RelativeLayout>