<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_width_5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/common_edit_shape">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/select_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_number"
                android:textSize="@dimen/text_size_22sp"
                android:textColor="@color/black"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin_width_5dp"/>
            <TextView
                android:id="@+id/select_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_title"
                android:textColor="@color/black_1"
                android:textSize="@dimen/text_size_24sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/select_number"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/margin_width_10dp"/>
            <TextView
                android:id="@+id/select_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_people"
                android:textSize="@dimen/text_size_20sp"
                android:textColor="@color/black"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/margin_width_5dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_width_5dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_subject_text"
                    android:textSize="@dimen/text_size_22sp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="@dimen/margin_width_10dp"/>
                <TextView
                    android:id="@+id/select_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_subject"
                    android:textSize="@dimen/text_size_20sp"
                    android:textColor="@color/black_1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_score_text"
                    android:textSize="@dimen/text_size_22sp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="@dimen/margin_width_10dp"/>
                <TextView
                    android:id="@+id/select_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_score"
                    android:textSize="@dimen/text_size_20sp"
                    android:textColor="@color/black_2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_difficulty_text"
                    android:textSize="@dimen/text_size_22sp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="@dimen/margin_width_10dp"/>
                <TextView
                    android:id="@+id/select_difficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_difficulty"
                    android:textSize="@dimen/text_size_20sp"
                    android:textColor="@color/black_2"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>