<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_width_60dp"
    android:orientation="horizontal"
    android:gravity="center|start">
    <ImageView
        android:id="@+id/overview_add"
        android:layout_width="@dimen/margin_width_30dp"
        android:layout_height="@dimen/margin_width_30dp"
        android:layout_marginEnd="@dimen/margin_width_10dp"
        android:layout_margin="@dimen/margin_width_10dp"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/overview_add_normal"/>
    <ImageView
        android:id="@+id/overview_level"
        android:layout_width="@dimen/margin_width_40dp"
        android:layout_height="@dimen/margin_width_30dp"
        android:layout_centerVertical="true"
        android:src="@drawable/know_level_0"
        android:layout_toEndOf="@+id/overview_add"
        android:layout_marginEnd="@dimen/margin_width_10dp"/>
    <TextView
        android:id="@+id/overview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/overview_title"
        android:textSize="@dimen/text_size_24sp"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/overview_level"/>
    <TextView
        android:id="@+id/overview_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/overview_score"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20sp"
        android:layout_toStartOf="@+id/overview_tool"
        android:layout_centerVertical="true"
        android:paddingEnd="@dimen/margin_width_20dp"/>
    <ImageView
        android:id="@+id/overview_tool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/overview_tool_normal"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_width_10dp"/>
    <LinearLayout
        android:id="@+id/overview_tool_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:background="@color/pink"
        android:padding="@dimen/margin_width_10dp"
        android:visibility="gone">
        <ImageView
            android:id="@+id/overview_tool_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/overview_update_normal"
            android:layout_marginEnd="@dimen/margin_width_10dp"/>
        <ImageView
            android:id="@+id/overview_tool_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/overview_delete_normal"/>
    </LinearLayout>
</RelativeLayout>